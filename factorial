def factorial(num):
    fact = 1
    if num < 0:
        return "Factorial does not exist for negative numbers"
    elif num == 0:
        return "Factorial of 0 is 1"
    else:
        for i in range(1, num+1):
            fact *= i
        return fact

num = int(input("Enter a number to find its factorial: "))
print(factorial(num))
